{
    "name": "freescout-helpdesk/freescout",
    "description": "Free self-hosted helpdesk and shared mailbox (Zendesk / Help Scout alternative)",
    "keywords": ["helpdesk", "help desk", "shared mailbox"],
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "The FreeScout Team",
            "email": "support@freescout.net"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0",
        "laravel/tinker": "^2.9",
        "doctrine/dbal": "^3.8",
        "egulias/email-validator": "^4.0",
        "ramsey/uuid": "^4.7",
        "symfony/polyfill-mbstring": "^1.29",
        "enshrined/svg-sanitize": "^0.20",
        "html2text/html2text": "^4.3",
        "mews/purifier": "^3.4",
        "spatie/laravel-activitylog": "^4.8",
        "webklex/php-imap": "^5.3",
        "nwidart/laravel-modules": "^11.0",
        "tormjens/eventy": "^0.8",
        "barryvdh/laravel-translation-manager": "^0.6",
        "chumper/zipper": "^1.0",
        "maatwebsite/excel": "^3.1"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.13",
        "fakerphp/faker": "^1.23",
        "mockery/mockery": "^1.6",
        "phpunit/phpunit": "^11.0",
        "laravel/pint": "^1.13",
        "larastan/larastan": "^2.9",
        "nunomaduro/collision": "^8.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "files": [
            "app/Misc/Functions.php"
        ],
        "psr-4": {
            "App\\": "app/",
            "Modules\\": "Modules/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
